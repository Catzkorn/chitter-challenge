<form action="/posts" method="post">
<input type="text" name="content" maxlength="240"><br>
<input type="submit" value="Post">
</form>

<div class="posts">
  <% @messages.each do |message| %>
    <div class="post" id="message-<%=message.id%>"> 
      
        <div class="content"> <%= message.content %> </div>
        <div class="time"><%= message.time.strftime("%H:%M") %> </div>
     
            
    </div>
     
  <% end %>
  </div>
<br>